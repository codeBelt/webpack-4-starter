{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "removeComments": true,
    "noImplicitAny": true,
    "allowJs": true,
    "lib": [
      "dom",
      "es2016",
      "es2017"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "pretty": true
  },
  "include": [
    "src/**/*"
  ],
}
